# ==============================================
# Trainr App - Environment Configuration
# ==============================================
# Copy this file to .env.local and fill in your values

# ==============================================
# REQUIRED: Supabase Configuration
# ==============================================
# Get these from your Supabase project settings
NEXT_PUBLIC_SUPABASE_URL=https://your-project-id.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key_here
SUPABASE_SERVICE_KEY=your_supabase_service_role_key_here

# ==============================================
# OPTIONAL: Garmin Integration
# ==============================================
# Required for Garmin Connect activity import
# Get these from Garmin Developer Portal
GARMIN_CLIENT_ID=your_garmin_client_id
GARMIN_CLIENT_SECRET=your_garmin_client_secret
GARMIN_REDIRECT_URI=http://localhost:3001/api/auth/garmin/callback

# ==============================================
# OPTIONAL: Monitoring & Error Tracking
# ==============================================
# Sentry for error tracking and performance monitoring
SENTRY_DSN=your_sentry_dsn_here
SENTRY_AUTH_TOKEN=your_sentry_auth_token_here

# ==============================================
# OPTIONAL: Map Services
# ==============================================
# Mapbox for enhanced map features (optional)
MAPBOX_ACCESS_TOKEN=your_mapbox_access_token_here
NEXT_PUBLIC_MAP_TILE_URL=https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png

# ==============================================
# DEVELOPMENT & BUILD
# ==============================================
NODE_ENV=development
NEXT_PUBLIC_APP_URL=http://localhost:3001
NEXT_PUBLIC_APP_NAME=Trainr App

# ==============================================
# DATABASE (Optional - for direct access)
# ==============================================
# Only needed if you want direct database access outside Supabase
DATABASE_URL=postgresql://user:password@localhost:5432/trainingsapp

# ==============================================
# OPTIONAL: Additional Integrations
# ==============================================
# Strava Integration (future feature)
STRAVA_CLIENT_ID=your_strava_client_id
STRAVA_CLIENT_SECRET=your_strava_client_secret

# Apple Health Integration (future feature)
APPLE_HEALTH_CLIENT_ID=your_apple_health_client_id
APPLE_HEALTH_CLIENT_SECRET=your_apple_health_client_secret

# Google Fit Integration (future feature)
GOOGLE_FIT_CLIENT_ID=your_google_fit_client_id
GOOGLE_FIT_CLIENT_SECRET=your_google_fit_client_secret

# ==============================================
# OPTIONAL: Feature Flags
# ==============================================
# Enable/disable features during development
NEXT_PUBLIC_ENABLE_GARMIN_INTEGRATION=true
NEXT_PUBLIC_ENABLE_ANALYTICS=false
NEXT_PUBLIC_ENABLE_DEBUG_LOGS=true

# ==============================================
# OPTIONAL: Performance & Caching
# ==============================================
# Redis for caching (future feature)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=your_redis_password

# ==============================================
# OPTIONAL: Email & Notifications
# ==============================================
# For email notifications (future feature)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password

# ==============================================
# OPTIONAL: File Storage
# ==============================================
# For file uploads (future feature)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
AWS_S3_BUCKET=your_s3_bucket_name